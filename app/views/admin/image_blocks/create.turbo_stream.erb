<%= turbo_stream.replace dom_id(@content_block) do %>
  <%=
    render @content_block,
    container_block: @container_block,
    project: @project
  %>
<% end %>

<%= turbo_stream.replace_all ".#{dom_id(@container_block, :content_block_position)}" do %>
  <%= hidden_field_tag "content_block[position]", @content_block.position + 1, class: dom_id(@container_block, :content_block_position) %>
<% end %>

<%= turbo_stream.update "flash", partial: "shared/flash" %>