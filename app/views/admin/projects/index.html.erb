<div class="my-10 w-full">
  <% @projects.each do |project| %>
    <div class="bg-white p-4 rounded mb-4 border">
      <h2 class="text-xl font-bold"><%= project.name %></h2>
      <p class="text-gray-500"><%= project.description %></p>
      <div class="flex gap-4 mt-4">
        <%= link_to "Edit", edit_admin_project_path(project), class: "bg-blue-500 text-white px-4 py-2 rounded-lg" %>
        <%= link_to "Delete", admin_project_path(project), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 text-white px-4 py-2 rounded-lg" %>
      </div>
    </div>
  <% end %>
</div>