<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold mb-4"><%= t("projects") %></h1>
  <%= link_to t("new_project"), new_admin_project_path, class: "admin-btn-primary" %>
</div>
<div class="flex flex-col gap-4">
  <% @projects.each do |project| %>
    <div class="flex gap-4 items-center justify-between bg-white p-4 rounded border">
      <div class="flex gap-4">
        <% if project.cover_photo.attached? %>
          <%= image_tag project.cover_photo.variant(:thumb), class: "h-32 w-44 object-cover shrink-0" %>
        <% end %>
        <div>
          <h2 class="text-xl font-bold"><%= project.name %></h2>
          <p class="text-gray-500"><%= project.description %></p>
        </div>
      </div>
      <div class="flex flex-col gap-4">
        <%= link_to "Edit", edit_admin_project_path(project), class: "admin-btn-secondary" %>
        <%= link_to "Delete", admin_project_path(project), method: :delete, data: { confirm: "Are you sure?" }, class: "admin-btn-delete" %>
      </div>
    </div>
  <% end %>
</div>