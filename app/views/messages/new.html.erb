<header class="my-10 flex flex-col gap-5">
  <h1 class="text-5xl font-bold border-b border-black"><%= t("contact") %></h1>
</header>

<section class="mt-3 flex flex-col gap-10">
  <div class="flex gap-10 items-center">
    <div class="flex flex-col gap-4 dashed-border p-4 h-fit w-1/3 shrink-0">
      <p class="flex items-center gap-4"><%= inline_svg_tag "icons/email.svg", class: "w-8 h-8 fill-black shrink-0" %><span>contact@amerma.org</span></p>
      <%= link_to "https://www.linkedin.com/company/amerma/", target: :_blank, class: "flex items-center gap-4 underline hover:no-underline" do %>
        <%= inline_svg_tag "icons/linked-in.svg", class: "w-8 h-8 fill-black shrink-0" %>
        <span>Amerma</span>
      <% end %>
      <p class="flex items-center gap-4"><%= inline_svg_tag "icons/pin-map.svg", class: "w-8 h-8 fill-black shrink-0" %><span>Marseille, France</span></p>
    </div>
