<header class="w-full mt-10">
  <% if project.cover_photo.attached? %>
    <%= image_tag project.cover_photo.variant(:cover), class: "w-full object-cover mb-6", data: { spec: "project-cover-photo" } %>
  <% end %>
  <div class="flex flex-col gap-8">
    <div class="flex gap-4 items-center">
      <h1 class="font-bold text-3xl grow" data-spec="project-name">
        <%= translates(project, :name) %>
      </h1>
    </div>
    <div class="bg-gray-100 p-4">
      <div class="flex gap-4 justify-between">
        <ul class="flex flex-col gap-3 mb-3">
          <li data-spec="project-status">
            <span class="text-sm text-gray-500"><%= t("status") %>:</span> <%= project_status(project.status) %>
          </li>
          <% if project.start_date.present? && project.end_date.present? %>
            <li data-spec="project-dates">
              <span class="text-sm text-gray-500"><%= t("dates") %>:</span> <%= l(project.start_date, format: :default) %> - <%= l(project.end_date, format: :default) %>
            </li>
          <% elsif project.start_date.present? %>
            <li data-spec="project-start-date">
              <span class="text-sm text-gray-500"><%= t("start_date") %>:</span> <%= l(project.start_date, format: :default) %>
            </li>
          <% elsif project.end_date.present? %>
            <li data-spec="project-end-date">
              <span class="text-sm text-gray-500"><%= t("end_date") %>:</span> <%= l(project.end_date, format: :default) %>
            </li>
          <% end %>
          <% if project.owner.present? %>
            <li data-spec="project-owner">
              <span class="text-sm text-gray-500"><%= t("owner") %>:</span> <%= project.owner %>
            </li>
          <% end %>
        </ul>
        <%= inline_svg_tag project.project_category.icon_path, class: "w-8 h-8 shrink-0", data: { spec: "project-category-icon" } %>
      </div>
      <p class="bg-white border-2 border-dashed border-black p-4" data-spec="project-description">
        <%= translates(project, :description) %>
      </p>
    </div>
  </div>
</header>